<% ((player_connected.posy-5)..(player_connected.posy+5)).each do|y| %>
      <% ((player_connected.posx-5)..(player_connected.posx+5)).each do|x| %>
        
          <% unless players["#{x};#{y}"].blank? %>
            <% player = players["#{x};#{y}"] %>
            <div id="player<%= player.id %>">
            <%= image_tag("/assets/icons/rabbit.png", :title => player.name) %>
           </div>
          <% else %>
            <div id="pos<%= "#{x}I#{y}" %>" class="field<% @map.default_field unless @map.default_field.blank? %>"></div>
          <% end %>
       
      <% end %>
    <% end %>