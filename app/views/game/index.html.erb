<div id="left_side">
  <div id="map">
    <% ((@player_connected.posy-5)..(@player_connected.posy+5)).to_a.reverse.each do|y| %>
      <% ((@player_connected.posx-5)..(@player_connected.posx+5)).each do|x| %>
        
          <% unless @players["#{x};#{y}"].blank? %>
            <% player = @players["#{x};#{y}"] %>
            <div id="player<%= player.id %>">
            
            <%= image_tag("/assets/icons/rabbit.png", :title => player.name) %>
           </div>
          <% else %>
          <div id="pos<%= "#{x}I#{y}" %>"></div>
          <% end %>
       
      <% end %>
    <% end %>
  </div>
  <div id="chat">
    Chat : <%= text_field_tag :chat_text,"" ,:style => "width:70%;"  %>
    <input type="button" value="Envoyer" />
  </div>
</div>
<div id="right_side">
 
  <h2 id="character_name"><%= @player_connected.name %></h2>
</div>
 <dl id="onglets">
    <dt class="current">1</dt>
    <dt>2</dt>
    <dt>3</dt>
  </dl>
