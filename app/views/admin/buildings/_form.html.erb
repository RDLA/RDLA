<% #locals: f and button %>
<% if f.object.errors.any? %>  
  <div id="errorExplanation">  
    <p><%= pluralize(f.object.errors.count, "erreur") %> a été rencontrée:</p>  
    <dl>  
    <% f.object.errors.full_messages.each do |msg| %>  
      <dt><%= msg %></dt>  
    <% end %>  
    </dl>  
  </div>  
  <% end %>  

<p>
  <%= f.label :icon_url, "URL Icone" %>
  <%= f.text_field :icon_url, :value => "rdla.png" %>
</p>
<p>
  <%= f.label :name, "Nom" %>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :map_id, "Plan" %>
  <%= f.select :map_id, options_for_select([["Choisir...",nil]]+@maps.collect {|map| [map.name,map.id]}, @building.map_id) %>
</p>
<p>
  <%= f.label :posx, "Position X" %>
  <%= f.number_field :posx, :step => 1 %>
</p>
<p>
  <%= f.label :posy, "Position Y" %>

  <%= f.number_field :posy, :step => 1 %>
</p>
<p>
  <%= f.submit :value => button %>
</p>